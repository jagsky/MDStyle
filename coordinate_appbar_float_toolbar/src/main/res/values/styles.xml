<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorPrimary">@color/red</item>
        <item name="android:colorPrimaryDark">@color/darkseagreen</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:navigationBarColor">@color/darkseagreen</item>
    </style>

    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">#aaE3F2FD</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
